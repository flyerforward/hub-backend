# Public URL for PB (used internally by settings + for links)
PB_PUBLIC_URL=https://pb.yourcompany.com

# Optional: encrypt secrets in DB (highly recommended)
PB_ENCRYPTION=your-long-random-secret-key

########################################
# S3 Settings — File Uploads (user content)
########################################
PB_S3_STORAGE_ENABLED=true
PB_S3_STORAGE_BUCKET=your-pb-files
PB_S3_STORAGE_REGION=us-east-1
PB_S3_STORAGE_ENDPOINT=https://s3.amazonaws.com
PB_S3_STORAGE_ACCESS_KEY=YOUR_FILES_BUCKET_ACCESS_KEY
PB_S3_STORAGE_SECRET=YOUR_FILES_BUCKET_SECRET
# If using MinIO, DigitalOcean Spaces, Wasabi, Cloudflare R2, etc:
# set this to true — otherwise leave false for AWS S3.
PB_S3_STORAGE_FORCE_PATH_STYLE=false

########################################
# S3 Settings — Automatic Backups
########################################
PB_S3_BACKUPS_ENABLED=true
PB_S3_BACKUPS_BUCKET=your-pocketbase-backups
PB_S3_BACKUPS_REGION=us-east-1
PB_S3_BACKUPS_ENDPOINT=https://s3.amazonaws.com
PB_S3_BACKUPS_ACCESS_KEY=YOUR_BACKUPS_BUCKET_ACCESS_KEY
PB_S3_BACKUPS_SECRET=YOUR_BACKUPS_BUCKET_SECRET
PB_S3_BACKUPS_FORCE_PATH_STYLE=false

# Automatic backups schedule: cron expression (default = every day at 03:00 UTC)
PB_BACKUPS_CRON=0 3 * * *
# Keep only the latest N backups (older ones auto-deleted)
PB_BACKUPS_MAX_KEEP=7